---
import { defaultLocale, locales } from '../config'
import { splitUrl } from '../utils'

const url = Astro.url
const { origin } = url
const { rest } = splitUrl(url)
---

<link
  rel="alternate"
  href={`${origin}/${defaultLocale}/${rest}`}
  hreflang="x-default"
/>

{
  locales.map((locale) => (
    <link
      rel="alternate"
      href={`${origin}/${locale}/${rest}`}
      hreflang={locale}
    />
  ))
}
